<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="niduscare.Button.FilledTonal" parent="Widget.Material3.Button.TonalButton">
    </style>

    <style name="Widget.App.CalendarDayHeaderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="niduscare.Button.Contained" >
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="cardElevation">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/colorError</item>
    </style>



    <style name="Widget.Material3.CardView.OutlinedCard" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
    </style>



    <style name="niduscare.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="niduscare.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="niduscare.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="niduscare.Button.Icon" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="niduscare.Button.LargeIcon" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="niduscare.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>

    <style name="niduscare.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="niduscare.ProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackCornerRadius">4dp</item>
        <item name="trackThickness">8dp</item>
        <item name="indicatorColor">@color/md_theme_primary</item>
        <item name="trackColor">@color/md_theme_surfaceVariant</item>
    </style>

    <style name="niduscare.Text.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="niduscare.Text.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="niduscare.Text.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="niduscare.Text.Caption" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <style name="AnalyticsMetricContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AnalyticsMetricValue" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceDisplaySmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnalyticsMetricLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAlignment">center</item>
    </style>




    <style name="PremiumBenefitText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="drawableTint">?attr/colorPrimary</item>
    </style>


    <style name="AppTheme_DialogAnimation" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/AppTheme_DialogAnimation</item>

        <item name="android:windowBackground">@drawable/dialog_background</item>

        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="colorSurfaceContainerHigh">?attr/colorSurface</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>

        <item name="android:windowEnterAnimation">@anim/fade_in_scale</item>
        <item name="android:windowExitAnimation">@anim/fade_out_scale</item>
    </style>


    <style name="niduscare.Card" parent="Widget.Material3.CardView.Elevated">
    </style>

    <style name="niduscare.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
    </style>

    <style name="AnalyticsStatDetail" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

</resources>