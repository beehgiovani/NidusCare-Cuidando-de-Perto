<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_medium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconTipoMedicamento"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Tipo de medicamento"
                    app:tint="?attr/colorPrimary"
                    tools:src="@drawable/ic_pill" />

                <TextView
                    android:id="@+id/textViewNome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    tools:text="Paracetamol 750mg" />

                <ImageButton
                    android:id="@+id/buttonQuickRefill"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Repor estoque"
                    android:src="@drawable/ic_add_circle"
                    android:visibility="gone"
                    app:tint="?attr/colorError"
                    tools:visibility="visible" />

                <ImageButton
                    android:id="@+id/buttonArchive"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Arquivar tratamento"
                    android:src="@drawable/ic_archive_box"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/statusLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        tools:text="Dose Atrasada" />

                    <ImageView
                        android:id="@+id/iconStatus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="Status do medicamento"
                        tools:src="@drawable/ic_alert" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewDosagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="1 Comprimido(s)" />

            <LinearLayout
                android:id="@+id/adherenceGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAdherence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="1 de 3 doses hoje" />

                    <TextView
                        android:id="@+id/textViewOverdoseWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:text="SUPERDOSAGEM"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="?attr/colorError"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_alert"
                        app:drawableTint="?attr/colorError"
                        tools:visibility="visible" />
                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressAdherence"
                    style="@style/Widget.Material3.LinearProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="?attr/colorPrimary"
                    app:trackCornerRadius="4dp"
                    tools:progress="50" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMarkAsTaken"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Administrar Agora"
                android:visibility="gone"
                app:icon="@drawable/ic_check_circle"
                app:iconTint="?attr/colorOnSecondaryContainer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainInfoLayout"
            tools:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMarkAsTaken_detail"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Administrar Agora"
                app:icon="@drawable/ic_check_circle"
                app:iconTint="?attr/colorOnSecondaryContainer"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewUltimoLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_history"
                app:drawableTint="?attr/colorOnSurfaceVariant"
                tools:text="Última aplicação: Abdômen Esquerdo"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewProximoLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_arrow_forward"
                app:drawableTint="?attr/colorPrimary"
                tools:text="Próxima aplicação: Abdômen Direito"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewFrequenciaHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                app:drawableStartCompat="@drawable/ic_alarm"
                app:drawableTint="?attr/colorOnSurfaceVariant"
                tools:text="4 vez(es) ao dia, às 08:00, 14:00, 20:00, 02:00" />

            <TextView
                android:id="@+id/textViewDuracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="?attr/colorOnSurfaceVariant"
                tools:text="Uso contínuo" />

            <LinearLayout
                android:id="@+id/estoqueLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estoque"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textStyle="bold" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressEstoque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:trackCornerRadius="4dp"
                    tools:progress="40" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewEstoque"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="12.5 de 100.0 mL restantes" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRefill"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repor"
                        app:icon="@drawable/ic_add_circle" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewValidadeProxima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Vencimento mais próximo: 31/12/2025" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/anotacoesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Anotações"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewAnotacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Categoria Regulatória: Similar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSkip"
                    style="@style/niduscare.Button.LargeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Pular dose"
                    app:icon="@drawable/ic_skip"
                    app:iconTint="?attr/colorTertiary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPausePlay"
                    style="@style/niduscare.Button.LargeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Pausar/Ativar medicamento"
                    app:icon="@drawable/ic_pause"
                    app:iconTint="?attr/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEdit"
                    style="@style/niduscare.Button.LargeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Editar medicamento"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="?attr/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDelete"
                    style="@style/niduscare.Button.LargeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Excluir medicamento"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="?attr/colorError" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/contentBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="detailsLayout, mainInfoLayout" />

        <ImageView
            android:id="@+id/imageViewExpandCollapse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Expandir ou contrair detalhes"
            android:src="@drawable/ic_arrow_downward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentBarrier"
            app:tint="?attr/colorOnSurfaceVariant" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>