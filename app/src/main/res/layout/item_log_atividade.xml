<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">

    <View
        android:id="@+id/timelineLineTop"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="?attr/colorOutline"
        app:layout_constraintBottom_toTopOf="@id/timelineIconBackground"
        app:layout_constraintEnd_toEndOf="@id/timelineIconBackground"
        app:layout_constraintStart_toStartOf="@id/timelineIconBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/timelineLineBottom"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="?attr/colorOutline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/timelineIconBackground"
        app:layout_constraintStart_toStartOf="@id/timelineIconBackground"
        app:layout_constraintTop_toBottomOf="@id/timelineIconBackground" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timelineIconBackground"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="?attr/colorTertiaryContainer"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:tint="?attr/colorOnTertiaryContainer"
            tools:src="@drawable/ic_notes" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textViewTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="@id/timelineIconBackground"
        app:layout_constraintStart_toEndOf="@id/timelineIconBackground"
        app:layout_constraintTop_toTopOf="@id/timelineIconBackground"
        tools:text="17:55" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/timelineIconBackground"
        app:layout_constraintTop_toBottomOf="@id/textViewTimestamp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:id="@+id/textViewDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                tools:text="Maria registrou a dose de Losartana." />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>