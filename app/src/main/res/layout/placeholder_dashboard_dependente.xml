<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <View
        android:id="@+id/imageViewAvatar_placeholder"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/placeholder_background_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/textViewDependentName_placeholder"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/placeholder_background"
        app:layout_constraintBottom_toTopOf="@+id/textViewDependentAge_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewAvatar_placeholder"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar_placeholder"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/textViewDependentAge_placeholder"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/placeholder_background"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewDependentName_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/textViewDependentName_placeholder"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:id="@+id/cardSummary_placeholder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/placeholder_background_rounded"
        app:layout_constraintTop_toBottomOf="@id/imageViewAvatar_placeholder" />

    <View
        android:id="@+id/cardReminders_placeholder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/placeholder_background_rounded"
        app:layout_constraintTop_toBottomOf="@id/cardSummary_placeholder" />

    <TextView
        android:id="@+id/label_care_management_placeholder"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/placeholder_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardReminders_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_care_management_placeholder">

        <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/placeholder_background_rounded"/>
        <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/placeholder_background_rounded"/>
        <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/placeholder_background_rounded"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>