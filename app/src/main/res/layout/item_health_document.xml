<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/niduscare.Card.Outlined"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <ImageView
            android:id="@+id/imageViewDocIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background_primary"
            android:contentDescription="Ícone do tipo de documento"
            android:padding="@dimen/padding_small"
            app:tint="?attr/colorOnPrimary"
            tools:src="@drawable/ic_lab_test" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDocTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                tools:text="Hemograma Completo" />

            <TextView
                android:id="@+id/textViewDocDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="14/09/2025 • Exame Laboratorial" />

            <TextView
                android:id="@+id/textViewDocProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_doctor"
                app:drawableTint="?attr/colorOnSurfaceVariant"
                android:drawablePadding="4dp"
                tools:visibility="visible"
                tools:text="Dr. Carlos / Lab. Exemplo" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Opções do documento"
            android:src="@drawable/ic_more_vert"
            app:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>