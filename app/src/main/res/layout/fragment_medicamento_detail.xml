<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developersbeeh.medcontrol.ui.searchmedicamentos.MedicamentoDetailFragment">

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Medicamento"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="@dimen/padding_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPrincipioAtivo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Princípio Ativo: "
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewClasseTerapeutica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Classe Terapêutica: "
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrincipioAtivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewLaboratorio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Laboratório: "
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewClasseTerapeutica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewRegistroAnvisa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registro ANVISA: "
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLaboratorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewApresentacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apresentação: "
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegistroAnvisa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewBulaLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Link da Bula: "
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:autoLink="web"
        app:layout_constraintTop_toBottomOf="@+id/textViewApresentacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
